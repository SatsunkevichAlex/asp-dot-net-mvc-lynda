@using ExploreCalifornia.Models
@model IEnumerable<ExploreCalifornia.Models.Post>

<h1>Explorer's Blog</h1>

<p>
    Below are a few of the latest posts from some of out explorers.
</p>

<div class="pager">
    @if (ViewBag.HasPreviousPage)
    {
        <a class="prev" href="@Url.Action("Index", "Blog", new { page = ViewBag.PreviousPage })">
            &lt; Prevoius
        </a>
    }

    @if (ViewBag.HasNextPage)
    {
        <a class="next" href="@Url.Action("Index", "Blog", new { page = ViewBag.NextPage })">
            Next &gt;
        </a>
    }
</div>

<div class="blog-posts">
    @foreach (Post post in Model)
    {
        <h1>
            @Html.ActionLink(post.Title, "Post", "Blog",
           new { year = post.Posted.Year, month = post.Posted.Month, key = post.Key })
        </h1>
        <div class="details">
            Posted <span>@post.Posted</span> by <span>@post.Author</span>
        </div>
        <div class="content">
            @post.Body
        </div>
    }
</div>